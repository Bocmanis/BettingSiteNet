@model BettingSiteNet.Models.Prediction

<td>
    <table width="100%" height="50px" class="text-center">
        <tr>
            <td>
                @Html.DisplayFor(model => model.HomeTeamScoreText, new { htmlAttributes = new { @class = "form-control" } })

            </td>
            <td>
                @Html.DisplayFor(model => model.EnemyTeamScoreText, new { htmlAttributes = new { @class = "form-control" } })
            </td>
        </tr>

        <tr>
            <td colspan="2">
                @if (Model.PointsEarned.HasValue)
                {
                    @Html.DisplayTextFor(model => model.PointsEarned)
                }
                else
                {
                   <span>-</span>
                }
            </td>
        </tr>
    </table>
</td>